datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Room {
  createdAt DateTime @default(now())
  house     House?   @relation(fields: [houseId], references: [id])
  houseId   String?
  id        String   @id @default(cuid())
  name      String?
  size      Int?
  updatedAt DateTime @updatedAt
}

model House {
  address   String?
  bookings  Booking[]
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  price     Float?
  rooms     Room[]
  updatedAt DateTime  @updatedAt
}

model Booking {
  createdAt    DateTime  @default(now())
  customerName String?
  endDate      DateTime?
  house        House?    @relation(fields: [houseId], references: [id])
  houseId      String?
  id           String    @id @default(cuid())
  startDate    DateTime?
  updatedAt    DateTime  @updatedAt
}

model Owner {
  createdAt DateTime @default(now())
  email     String?
  id        String   @id @default(cuid())
  name      String?
  updatedAt DateTime @updatedAt
}
